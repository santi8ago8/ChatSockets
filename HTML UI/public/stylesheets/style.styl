body
    padding: 100px
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
    color: #00B7FF
.personasConectadas
    float: left
    position: absolute
    top 0%
    left 0%
    height 96%
    overflow hidden
    padding 10px 10px 10px 10px
    .userName
        text-decoration underline
        cursor pointer
    .disconnect
        color red
p
    margin 0 0 0 0
.chat
    height 350px;
    width 300px;
    position: absolute;
    border: 1px solid black;
    background-color: #ccc;
    .cerrador
        position absolute
        right 0%
        top 0%
        cursor pointer
    p.nombreHeader
        background-color:grey;
        cursor: move
    .nombre
        color white;
    .mensajes
        height 88%
        width 100%
        overflow-y scroll
        overflow-x auto
    [type="text"]
        width 80%